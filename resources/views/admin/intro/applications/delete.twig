{% extends 'admin/_page.twig' %}
{% block title %}{{ application.first_name }} {{ application.last_name }}{% endblock %}
{% block content %}
    <div class="container">
        <main class="intro application">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ application.first_name }} {{ application.last_name }}</h1>
                    <h3>{{ trans('admin.intro.status_' ~ application.status) }}
                        {% if application.status == 'new' and application.email_confirmation_token == null %}
                            â€“ {{ trans('admin.intro.no_mail') }}
                        {% endif %}</h3>
                </div>
                <div class="col-md-12 text-danger">{{ trans('admin.intro.delete.are_you_sure')|raw }}</div>
                <form class="col-md-12" action="{{ route('admin.intro.destroy', { application: application }) }}" method="POST">
                    {{ csrf_field() }}
                    {{ method_field('DELETE') }}
                    <button type="submit" class="button danger">{{ trans('admin.intro.delete.delete') }}</button>
                </form>
            </div>
        </main>
    </div>
{% endblock %}