{% extends 'admin/_page.twig' %}
{% block title %}{{ trans('admin.store.items.delete.title', { item: item.name }) }}{% endblock %}
{% block content %}
    <div class="container">
        <main class="store item stock">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ trans('admin.store.items.delete.title', { item: item.name }) }}</h1>
                </div>
                <div class="col-md-12 text-danger">{{ trans('admin.store.items.delete.are_you_sure')|raw }}</div>
                <form class="col-md-12" action="{{ route('admin.store.items.destroy', { item: item }) }}" method="POST">
                    {{ csrf_field() }}
                    {{ method_field('DELETE') }}
                    <button type="submit" class="button danger">{{ trans('admin.store.items.delete.delete') }}</button>
                </form>
            </div>
        </main>
    </div>
{% endblock %}