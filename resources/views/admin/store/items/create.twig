{% extends 'admin/_page.twig' %}
{% block title %}{{ trans('admin.store.items.create.title') }}{% endblock %}
{% block content %}
    <div class="container">
        <main class="store items">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ trans('admin.store.items.create.title') }}</h1>
                    <form action="{{ route('admin.store.items.store') }}" method="POST" class="row">
                        {{ csrf_field() }}
                        <div class="col-6">
                            <div class="form-group">
                                <label for="name">{{ trans('admin.store.items.name') }}</label>
                                <input id="name" type="text" class="form-control {{ errors.has('name') ? 'is-invalid' }}" name="name" value="{{ old('name') }}">
                                <div class="invalid-feedback">
                                    {{ errors.first('name')|ucfirst }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="description">{{ trans('admin.store.items.description') }}</label>
                                <textarea name="description" id="description" cols="20" rows="10" class="form-control {{ errors.has('description') ? 'is-invalid' }}">{{ old('description') }}</textarea>
                                <div class="invalid-feedback">
                                    {{ errors.first('description')|ucfirst }}
                                </div>
                            </div>
                            
                        </div>
                        <div class="col-6">
                            
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <input type="submit" class="button" value="{{ trans('admin.store.items.create.create') }}">
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </main>
    </div>
{% endblock %}