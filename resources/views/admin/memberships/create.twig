{% extends 'admin/_page.twig' %}
{% block title %}{{ trans('admin.memberships.create.title') }}{% endblock %}
{% block content %}
    <div class="container">
        <main class="membership">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ trans('admin.memberships.create.title') }}</h1>
                    <form action="{{ route('admin.members.membership.store', { member: member } ) }}" method="POST" class="row">
                        {{ csrf_field() }}
                        <div class="col-12">
                            <div class="form-group">
                                <label for="valid_from">{{ trans('admin.memberships.valid_from') }}</label>
                                <input id="valid_from" type="date"
                                       class="form-control {{ errors.has('valid_from') ? 'is-invalid' }}"
                                       placeholder="{{ trans('admin.memberships.valid_from_format') }}" name="valid_from"
                                       value="{{ old('valid_from', valid_from|date('Y-m-d')) }}">
                                <div class="invalid-feedback">
                                    {{ errors.first('valid_from')|ucfirst }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="valid_until">{{ trans('admin.memberships.valid_until') }}</label>
                                <input id="valid_until" type="date"
                                       class="form-control {{ errors.has('valid_until') ? 'is-invalid' }}"
                                       placeholder="{{ trans('admin.memberships.valid_until_format') }}" name="valid_until"
                                       value="{{ old('valid_until', valid_until|date('Y-m-d')) }}">
                                <div class="invalid-feedback">
                                    {{ errors.first('valid_until')|ucfirst }}
                                </div>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <input type="submit" class="button" value="{{ trans('admin.memberships.create.create') }}">
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </main>
    </div>
{% endblock %}