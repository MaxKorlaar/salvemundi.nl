{% extends 'admin/_page.twig' %}
{% block title %}{{ member.first_name }} {{ member.last_name }}{% endblock %}
{% block content %}
    <div class="container">
        <main class="member">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ member.first_name }} {{ member.last_name }}</h1>
                </div>
                <div class="col-md-12 text-danger">{{ trans('admin.members.delete.are_you_sure')|raw }}</div>
                <form class="col-md-12" action="{{ route('admin.members.destroy', { member: member }) }}" method="POST">
                    {{ csrf_field() }}
                    {{ method_field('DELETE') }}
                    <button type="submit" class="button danger">{{ trans('admin.members.delete.delete') }}</button>
                </form>
            </div>
        </main>
    </div>
{% endblock %}