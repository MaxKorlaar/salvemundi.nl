{% extends 'partials/page.twig' %}
{% block title %}{{ trans('committee.study.title') }}{% endblock %}
{% block content %}
    <div class="content">
        <main class="committee study-committee">
            <div class="container">
                <h1>{{ trans('committee.study.title') }}</h1>
                <section>
                    {% for text in trans('committee.study.about_text') %}
                        <p>{{ text|nl2br }}</p>
                    {% endfor %}
                </section>
            </div>
            <section class="members">
                <div class="container">
                    <h2>{{ trans('committee.study.meet_the_team') }}</h2>
                    <div class="grid">
                        {% for member in trans('committee.study.members') %}
                            <div class="member has-image" id="{{ member.name|str_slug }}">
                                <div class="inner {{ member.reverse ? 'reverse' }}">
                                    <div class="content">
                                        <h4>{{ member.name }}</h4>
                                        <h5>{{ member.profile }}</h5>
                                    </div>
                                    <div class="image">
                                        <div class="img" style="background-image: url('{{ asset('images/commissies/studie/' ~ member.image) }}');">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </section>

        </main>
    </div>
{% endblock %}