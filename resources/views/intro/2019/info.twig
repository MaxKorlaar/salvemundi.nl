        <main class="intro">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ trans('intro.info.title') }}</h1>
                    <div class="button-menu my-3">
                        <a href="{{ route('intro.2019.info') }}">
                            <button class="button mx-1">Algemene informatie</button>
                        </a>
                        <a href="{{ route('intro.2019.schedule') }}">
                            <button class="button mx-1">Planning</button>
