{% extends 'partials/page.twig' %}
{% block title %}{{ trans('intro.2019.schedule_page.title') }}{% endblock %}
{% block social_description %}{{ trans('intro.2019.schedule_page.description') }}{% endblock %}
{% block social_image %}{{ asset('images/intro/2019/image1.jpg') }}{% endblock %}
{% block social_image_width %}2985{% endblock %}
{% block social_image_height %}1990{% endblock %}
{% block content %}
    <div class="container content">
        <main class="introduction">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ trans('intro.2019.title', { year: introduction.year.year }) }}</h1>
                    <div class="button-menu my-3">
                        <a class="button mx-1" href="{{ route('intro.by_id.info', { introduction: introduction, year: year } ) }}">
                            {{ trans('intro.main_info_button') }}
                        </a>
                        <a class="button mx-1" href="{{ route('intro.by_id.schedule', { introduction: introduction, year: year }) }}">
                            {{ trans('intro.schedule_button') }}
                        </a>
                        <a class="button mx-1" href="{{ route('intro.by_id.signup', { introduction: introduction, year: year }) }}">
                            {{ trans('intro.sign_up_button') }}
                        </a>
                    </div>
                </div>
                <div class="col-md-12">
                    <h2>Planning</h2>
                    <div>
                        {% for day in trans("intro.2019.schedule_page.days") %}
                            <h3>{{ day.title }}</h3>
                            <div class="row">
                                <div class="col">
                                    {% for text in day.text %}
                                        <p>
                                            {{ text|raw }}
                                        </p>
                                    {% endfor %}
                                </div>
                                {% if day.youtube %}
                                    <div class="col-lg-6 align-content-center">
                                        <div class="youtube-wrapper">
                                            <iframe width="560" height="315" src="{{ day.youtube }}" frameborder="0"
                                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>

                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-12">
                    <h2>{{ trans('intro.2019.contact.title') }}</h2>
                    <p>{{ trans('intro.2019.contact.text')|raw }}</p>
                </div>
                <div class="col-md-12 mb-4">
                    <div class="row">
                        <div class="col-md-4">
                            <img class="img-fluid" src="{{ asset('images/intro/2019/image1.jpg') }}">
                        </div>
                        <div class="col-md-4">
                            <img class="img-fluid" src="{{ asset('images/intro/2019/image2.jpg') }}">
                        </div>
                        <div class="col-md-4">
                            <img class="img-fluid" src="{{ asset('images/intro/2019/image3.jpg') }}">
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
