{% extends 'partials/page.twig' %}
{% block title %}{{ trans('intro.signup.title', { year: introduction.year.year }) }}{% endblock %}
{% block head %}
    {{ parent() }}
    <meta http-equiv="refresh" content="3; url={{ links.checkout.href }}"/>
{% endblock %}
{% block content %}
    <div class="container content">
        <main class="signup">
            <h1>{{ trans('intro.signup.title', { year: introduction.year.year }) }}</h1>
            <div class="row justify-content-center">
                <div class="col-md-4 payment-page">
                    <div class="loader">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <h3>{{ trans('intro.signup.redirecting') }}</h3>
                    <p>{{ trans('intro.signup.redirecting_instructions') }}</p>
                </div>
            </div>
        </main>
    </div>
{% endblock %}