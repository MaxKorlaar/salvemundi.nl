{% extends 'partials/page.twig' %}
{% block title %}{{ trans('intro.signup.email_confirmed') }}{% endblock %}
{% block content %}
    <div class="container content">
        <main class="signup">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="checkmark-wrapper">
                        <div class="checkmark">&check;</div>
                    </div>
                    <h2>{{ trans('intro.signup.email_confirmed') }}</h2>
                    <p>{{ trans('intro.signup.thanks_for_confirming', { name: application.first_name, year: application.introduction.year.year }) }}</p>
                    <p>{{ trans('intro.signup.instructions', { amount: application.calculateIntroCosts(), id: application.transaction_id })|raw }}</p>
                    <p>{{ trans('intro.signup.sent_email') }}</p>
                </div>
            </div>
        </main>
    </div>
{% endblock %}